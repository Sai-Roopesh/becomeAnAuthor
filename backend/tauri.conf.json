{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Become An Author",
  "version": "0.0.1",
  "identifier": "com.becomeauthor.desktop",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bash ./scripts/dev-web-safe.sh",
    "beforeBuildCommand": "pnpm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Become An Author",
        "width": 1400,
        "height": 900,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self' data: blob: asset: tauri: http: https: ws: wss:; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob: asset: http: https:; connect-src 'self' data: blob: http: https: ws: wss:; font-src 'self' data: https:;",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$DOCUMENT/**",
          "$HOME/Documents/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "signingIdentity": "-"
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/Sai-Roopesh/becomeAnAuthor/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQzODg4QTZCMEFDQTYxQjMKUldTelljb0thNHFJUTljYkxpeFltSUxsakpYQVhvUXJsMWFYMzVPeHlBVWxSYWh0MGFCNG1zdmoK"
    }
  }
}
